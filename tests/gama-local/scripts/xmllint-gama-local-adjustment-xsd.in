#!/bin/sh

set -e

RES=@RESULT_DIR@/xmllint-gama-local-adjustment-xsd
if [ ! -d $RES ] ; then
    mkdir -p $RES
fi

for g in @INPUT_FILES_FOR_SH@
do
    @GAMA_LOCAL@ @INPUT_DIR@/$g.gkf \
        --xml $RES/adjustment-$g.xml
    @LIBXML2_XMLLINT_EXECUTABLE@ --schema @GAMA_XML@/gama-local-adjustment.xsd \
      --noout $RES/adjustment-$g.xml
done
