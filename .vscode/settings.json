{
    "cmake.buildDirectory": "${userHome}/bin/gama/build/${buildType}",
    "cmake.installPrefix": "${userHome}/bin/gama/install/${buildType}",
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_BUILD_TYPE":"${buildType}"
    },
    "cmakeExplorer.cmakeIntegration":true,
    "cmakeExplorer.buildDir":"${buildDirectory}",
    "cmakeExplorer.buildConfig":"${buildType}",
    "cmakeExplorer.debugConfig":"stopAtEntryDebug",
    "cmakeExplorer.parallelJobs":-1,
    "cmakeExplorer.extraCtestRunArgs":"-j 6",
    "C_Cpp.enhancedColorization": "Enabled",
    "python.pythonPath": "/bin/python",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintArgs": [
        "--rcfile ${workspaceFolder}/.vscode/pylintrc"
    ],
    "C_Cpp.clang_format_fallbackStyle": "Visual Studio",
    "C_Cpp.errorSquiggles": "Enabled",
    "files.associations": {
        "fstream": "cpp"
    }
}