    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Conan install",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/conan",
            "console": "integratedTerminal",
            "args": [
                "install",
                "${workspaceFolder}",
                "--profile:build=linux_build",
                "--profile:host=${input:profile}_host", 
                "--install-folder",
                "${env:HOME}/bin/gama/${input:profile}",
                "-s",
                "build_type=${commmand:cmake.buildType}",
                "--build=cascade"
            ]
        }
    ],
    "inputs": [
        {
            "id": "profile",
            "type": "pickString",
            "description": "profile used during the Conan build",
            "options": [
                "wasm",
                "linux"
            ],
            "default": "linux"
        }
    ]
}